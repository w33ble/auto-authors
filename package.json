{
  "name": "auto-authors",
  "version": "0.1.0",
  "description": "Command line tool for generating a list of authors from git commit history and github",
  "bin": {
    "auto-authors": "./bin/authors"
  },
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint \"*.{js,mjs}\" \"src/**/*.{js,mjs}\"",
    "authors": "node ./bin/authors",
    "version": "auto-changelog -p && npm run authors && git add CHANGELOG.md AUTHORS.md",
    "test": "npm run lint"
  },
  "keywords": [
    "github",
    "git",
    "authors",
    "username",
    "markdown",
    "contributors",
    "project"
  ],
  "author": "Joe Fleming (https://github.com/w33ble)",
  "license": "MIT",
  "lint-staged": {
    "*.{js,mjs,json,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": ".changelog_template.hbs",
    "ignoreCommitPattern": "(chore|test):",
    "commitLimit": false
  },
  "dependencies": {
    "handlebars": "^4.0.11",
    "mri": "^1.1.0",
    "node-fetch": "^2.1.2"
  },
  "devDependencies": {
    "auto-changelog": "^1.4.6",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.1.0",
    "lint-staged": "^7.0.4",
    "prettier": "^1.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/w33ble/auto-authors.git"
  }
}
